{
	"name": "henris",
	"version": "0.0.1",
	"description": "SCSS framework",
	"main": "index.scss",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"test": "jest",
		"sass-dist":
			"node-sass scss/style.scss dist/style.min.css --output-style compressed",
		"sass": "node-sass scss/style.scss dist/style.css",
		"sass-watch": "node-sass scss/style.scss dist/style.css --watch",
		"settings": "node scripts/json-to-css.js",
		"dev": "npm run settings && npm run sass-watch",
		"dist": "npm run settings && npm run sass && npm run sass-dist",
		"build": "npm run settings && npm run sass",
		"prepublishOnly": "npm run build"
	},
	"keywords": ["scss", "framework", "sass", "grid"],
	"author": "Sil van Diepen",
	"license": "MIT",
	"devDependencies": {
		"autoprefixer": "^8.5.2",
		"flat": "^4.0.0",
		"node-sass": "^4.9.0",
		"postcss": "^6.0.22"
	}
}
