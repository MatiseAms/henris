{
	"name": "henris",
	"version": "0.0.1",
	"description": "SCSS framework",
	"main": "index.scss",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"test": "node-sass test/index.scss test/output.css",
		"sass": "node-sass src/scss/style.scss dist/style.css",
		"sass-dist": "node-sass style.scss dist/style.min.css --output-style compressed",
		"sass-watch": "node-sass style.scss dist/style.css --watch",
		"sass-test": "node-sass ext.scss dist/ext.css",
		"settings": "node scripts/json-to-css.js",
		"dev": "npm run settings && npm run sass-watch",
		"dist": "npm run settings && npm run sass && npm run sass-dist",
		"build": "npm run settings && npm run sass",
		"prepublishOnly": "npm run test && npm run build",
		"icons": "icon-font-generator src/icons/_brands/*.svg -o dist"
	},
	"keywords": [
		"scss",
		"framework",
		"sass",
		"grid"
	],
	"author": "Sil van Diepen",
	"license": "MIT",
	"devDependencies": {
		"autoprefixer": "^8.5.2",
		"flat": "^4.0.0",
		"node-sass": "^4.9.0",
		"postcss": "^6.0.22"
	},
	"dependencies": {
		"sass-true": "^4.0.0"
	}
}
